<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_onboarding">

    <ImageView
        android:id="@+id/iv_onboarding_two"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_onboarding_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_onboarding_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="In this app, you can monitor crypto prices and see the details of the crypto."
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_two" />

</androidx.constraintlayout.widget.ConstraintLayout>